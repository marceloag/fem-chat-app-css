---
import Phone from "../components/phone.astro";
import Intro from "../components/intro.astro";
import Background from "../components/background.astro";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/images/favicon-32x32.png"
		/>

		<title>Frontend Mentor | Chat App </title>
	</head>
	<body class="grid place-items-center h-screen">
    <Background />
    <main class="flex flex-col md:flex-row w-3/2 h-auto items-center gap-10 md:gap-40 z-10">
      <Phone />
      <Intro />
    </main>
		<div class="hidden md:visible attribution absolute bottom-2 text-darkgreyishviolet">
			Challenge by <a
				href="https://www.frontendmentor.io?ref=challenge"
				target="_blank">Frontend Mentor</a
			>. Coded by <a href="http://github.com/marceloag" class="text-lightviolet font-bold">@marceloag</a>.
		</div>
	</body>
</html>

<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;700&display=swap");
	* {
		font-family: "Rubik", sans-serif;
	}
</style>
